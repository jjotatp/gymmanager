<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url"
               name="avatar_url"
               value="{{ instructor.avatar_url }}"
               placeholder="http://">
    </div>
</div>

<div class="item">
    <div>Intrutor</div>
    <div>
        <input type="text"
               name="name"
               value="{{ instructor.name }}"
               placeholder="Nome do Instrutor">
    </div>
</div>

<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input type="date"
               name="birth"
               value="{{ instructor.birth }}">
    </div>
</div>

<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input type="radio"
                   name="gender"
                   value="Masculino"
                   {% if  instructor.gender == 'Masculino' %} checked
                   {% endif %}}>
            Masculino
        </span>
        
        <span>
            <input type="radio"
                   name="gender"
                   value="Feminino"
                   {% if instructor.gender == 'Feminino' %} checked
                   {% endif %}>
            Feminino
        </span>
    </div>
</div>

<div class="item">
    <div>Área de Atuação</div>
    <div>
        <input type="text"
               name="services"
               value="{{ instructor.services }}"
               placeholder="Separe os serviços prestados por vírgula">
    </div>
</div>

<button type="submit">Salvar</button>